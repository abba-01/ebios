# eBIOS v1.0.0 Environment Configuration
# Copy this file to .env and fill in your values

# Security (REQUIRED for production)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# JWT Token Configuration (optional, defaults shown)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# PostgreSQL Database (required for production, optional for development)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ebios
POSTGRES_USER=ebios_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SSLMODE=require

# CORS Configuration (optional, defaults to *)
# Comma-separated list of allowed origins
# Examples:
#   CORS_ORIGINS=https://example.com,https://app.example.com
#   CORS_ORIGINS=http://localhost:3000
# Default: * (allows all origins - INSECURE for production!)
CORS_ORIGINS=*

# Server Configuration (optional)
#UVICORN_HOST=0.0.0.0
#UVICORN_PORT=8080
#UVICORN_WORKERS=4

# Monitoring (optional)
#PROMETHEUS_PORT=9090

# Development/Testing
#DEBUG=false
#LOG_LEVEL=info
